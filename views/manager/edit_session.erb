<div class ="button1"> <a href="/manager"> Index </a> </div>


<form method="post" action="/manager/sessions/<%=@session.id%>">
 <ul>
   <li>
     <label for="name-field">Session name:</label>
     <input type="text" name="name" id="name-field"
     value= "<%= @session.name%>"/>
   </li>
   <li>
     <label for="location-field">Location:</label>
     <input type="text" name="location" id="location-field"
     value= "<%= @session.location%>"/>
   </li>
   <li>
     <label for="distance-field">Distance:</label>
     <input type="number" name="distance" id="distance-field"
      value= "<%= @session.distance%>"/>
   </li>

   <li>
     <label for="level">Level:</label>
     <select name="level" id="level">
       <option value="1"<%= "selected" if @session.level == "1" %>>1</option>
       <option value="2"<%= "selected" if @session.level == "2" %>>2</option>
       <option value="3"<%= "selected" if @session.level == "3" %>>3</option>
     </select>
   </li>
   <li>
     <label for="day">Day:</label>
     <input type="number" name="day" id="day-field"
      value= "<%= @session.day%>"/>
   </li>
   <li>
     <label for="time">Time:</label>
     <input type="number" name="time_of_day" id="time-field"
      value= "<%= @session.time_of_day%>"/>
   </li>

   <li>
     <label for="price">Price:</label>
     <input type="number" name="price" id="price-field"
      value= "<%= @session.price%>"/>
   </li>
   <li>
     <label for="max_number">Max_number:</label>
     <input type="number" name="max_number" id="max_number-field"
      value= "<%= @session.max_number%>"/>
   </li>

   <li>
     <input type="submit" value="Confirm Entry"/>
   </li>
 </ul>

</form>
